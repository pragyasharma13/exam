<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_10dp">

        <androidx.cardview.widget.CardView
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_marginBottom="@dimen/_10dp"
            app:cardCornerRadius="@dimen/_10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="170dp">

                <ImageView
                    android:id="@+id/menuimage"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_pp" />


            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:gravity="left"
                android:paddingLeft="@dimen/_10dp"
                android:paddingTop="@dimen/_10dp"
                android:text="@string/Examname"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/examnametv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="left"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:gravity="left"
                android:paddingLeft="@dimen/_10dp"
                android:text="sdsdsdsddsdds"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:gravity="left"
                android:paddingLeft="@dimen/_10dp"
                android:paddingTop="@dimen/_10dp"
                android:text="Exam Description"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/examdesctv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="4dp"
                android:layout_marginBottom="20dp"
                android:gravity="left"
                android:paddingLeft="@dimen/_10dp"
                android:text="fdfdffdfdfdfdfdfdf"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/clostv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5dp"
            android:layout_marginRight="@dimen/_5dp"
            android:layout_marginBottom="@dimen/_10dp"
            android:layout_weight="1"
            android:background="@drawable/bgred"
            android:fontFamily="@font/dinregular"
            android:gravity="center_horizontal"
            android:paddingLeft="@dimen/_5dp"
            android:paddingTop="@dimen/_2dp"
            android:paddingRight="@dimen/_5dp"
            android:paddingBottom="@dimen/_5dp"
            android:text="Close"
            android:textAllCaps="false"
            android:textColor="@color/white1"
            android:textSize="@dimen/_15sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ImageView
        android:id="@+id/clossimg"
        android:layout_width="@dimen/_20dp"
        android:layout_height="@dimen/_20dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_marginRight="@dimen/_10dp"
        android:gravity="center"
        android:scaleType="fitCenter"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_back" />

</RelativeLayout>