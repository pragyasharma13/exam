<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <include
        android:id="@+id/toolbar1"
        layout="@layout/toolbar5" />
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@id/toolbar1"
        android:background="@drawable/toolbar_dropshadow" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@id/toolbar1"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/rel_lay_signup"
                android:layout_width="match_parent"
                android:visibility="visible"

                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/name_layout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_40dp"
                    android:layout_marginTop="@dimen/_20dp"
                    android:layout_marginEnd="@dimen/_40dp"
                    android:hint="@string/entername">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/nametv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:padding="@dimen/_10dp"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/father_layout"
                    android:layout_below="@+id/name_layout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_40dp"
                    android:layout_marginTop="@dimen/_15dp"
                    android:layout_marginEnd="@dimen/_40dp"
                    android:hint="@string/EnterAddress">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/fathernametv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:padding="@dimen/_10dp"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_below="@+id/father_layout"
                    android:id="@+id/add_layout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_40dp"
                    android:layout_marginTop="@dimen/_15dp"
                    android:layout_marginEnd="@dimen/_40dp"
                    android:hint="@string/EnterEmailAddress">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/addresstv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:padding="@dimen/_10dp"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_below="@+id/add_layout"
                    android:id="@+id/dob_layout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_40dp"
                    android:layout_marginTop="@dimen/_15dp"
                    android:layout_marginEnd="@dimen/_40dp"
                    android:hint="@string/EnterMobile">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/dobtv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:inputType="none"
                        android:maxLength="10"
                        android:focusable="false"
                        android:padding="@dimen/_10dp"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15sp" />
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_below="@+id/dob_layout"
                    android:id="@+id/scname_layout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_40dp"
                    android:layout_marginTop="@dimen/_15dp"
                    android:layout_marginEnd="@dimen/_40dp"
                    android:hint="@string/AtlernateMobile">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/scnametv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:inputType="textPersonName"
                        android:maxLength="10"
                        android:padding="@dimen/_10dp"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:id="@+id/class_layout"
                    android:layout_marginTop="@dimen/_15dp"
                    android:background="@drawable/spinner"
                    android:layout_below="@+id/scname_layout"
                    android:layout_width="match_parent"
                    android:layout_marginStart="@dimen/_40dp"
                    android:layout_marginEnd="@dimen/_40dp"
                    android:layout_height="45dp">
                    <Spinner
                        android:id="@+id/classspi"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:spinnerMode="dropdown"/>
                </LinearLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/mobile_layout"
                    android:layout_below="@+id/class_layout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_40dp"
                    android:layout_marginTop="@dimen/_15dp"
                    android:layout_marginEnd="@dimen/_40dp"
                    android:hint="@string/mobileno">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/mobiletv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:background="@null"
                        android:inputType="number"
                        android:padding="@dimen/_10dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/email_layout"
                    android:layout_below="@+id/mobile_layout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_40dp"
                    android:layout_marginTop="@dimen/_15dp"
                    android:layout_marginEnd="@dimen/_40dp"
                    android:hint="@string/emailid">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/emailtv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:background="@null"
                        android:inputType="textEmailAddress"
                        android:padding="@dimen/_10dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15sp" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/password_layout"
                    android:layout_below="@+id/email_layout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_40dp"
                    android:layout_marginTop="@dimen/_15dp"
                    android:layout_marginEnd="@dimen/_40dp"
                    android:hint="@string/password">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/passtv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:background="@null"
                        android:inputType="textPassword"
                        android:padding="@dimen/_10dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15sp" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/confirmpass_layout"
                    android:layout_below="@+id/password_layout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_40dp"
                    android:layout_marginTop="@dimen/_15dp"
                    android:layout_marginEnd="@dimen/_40dp"
                    android:hint="@string/confirmpass">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/confirmpasstv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:background="@null"
                        android:inputType="textPassword"
                        android:padding="@dimen/_10dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/signup"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/confirmpass_layout"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_40dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="@dimen/_40dp"
                    android:layout_marginBottom="40dp"
                    android:background="@color/black"
                    android:textSize="@dimen/_15dp"
                    android:fontFamily="@font/dinarabic"
                    android:text="@string/signup"
                    android:textAllCaps="false"
                    android:textColor="@color/white1" />
            </RelativeLayout>

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white1"
                android:visibility="gone"
                android:id="@+id/rel_layout_otp"

                >


                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                        <ImageView
                            android:id="@+id/imagepass1"
                            android:layout_width="@dimen/_50dp"
                            android:layout_height="@dimen/_50dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/_50dp"
                            app:srcCompat="@drawable/ic_password" />

                        <TextView
                            android:id="@+id/enteremail1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/imagepass1"
                            android:layout_marginStart="@dimen/_40dp"
                            android:layout_marginEnd="@dimen/_40dp"
                            android:layout_marginTop="@dimen/_50dp"
                            android:layout_marginRight="@dimen/activity_horizontal_margin"
                            android:fontFamily="@font/dinregular"
                            android:gravity="center"
                            android:text="@string/entereotpmsg"
                            android:textColor="@color/black"
                            android:visibility="visible" />



                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/otp1"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@id/enteremail1"
                            android:layout_marginStart="@dimen/_40dp"
                            android:layout_marginTop="@dimen/_20dp"
                            android:layout_marginEnd="@dimen/_40dp"
                            android:hint="@string/enterotp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/otptv1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:background="@null"
                                android:gravity="center_vertical"
                                android:inputType="number"
                                android:maxLength="6"
                                android:padding="@dimen/_10dp"
                                android:singleLine="true"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_15sp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <TextView
                            android:id="@+id/otptime1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/otp1"
                            android:layout_marginRight="@dimen/_40dp"
                            android:layout_marginLeft="@dimen/_40dp"
                            android:layout_marginTop="@dimen/_20dp"
                            android:gravity="center_horizontal|right"
                            android:text="00:00"
                            android:textColor="@color/red"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/resend1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/otptime1"
                            android:layout_marginRight="@dimen/_40dp"
                            android:layout_marginLeft="@dimen/_40dp"
                            android:layout_marginTop="@dimen/_20dp"
                            android:fontFamily="@font/dinregular"
                            android:gravity="right"
                            android:text="Resend OTP"
                            android:textColor="@color/black"
                            android:visibility="visible" />
                        <Button
                            android:id="@+id/submit"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:textSize="@dimen/_15dp"
                            android:layout_below="@+id/resend1"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_40dp"
                            android:layout_marginTop="30dp"
                            android:layout_marginRight="@dimen/_40dp"
                            android:background="@color/black"
                            android:fontFamily="@font/dinarabic"
                            android:text="@string/submit"
                            android:layout_marginBottom="@dimen/_40dp"
                            android:textAllCaps="false"
                            android:textColor="@color/white1" />


                    </RelativeLayout>
                </ScrollView>

                <ProgressBar
                    android:id="@+id/pb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:visibility="gone" />
            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>

